{
  "name": "motorcycle-workshop-manager",
  "version": "1.0.0",
  "description": "Full-stack spare-part stock management system for motorcycle workshop",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run dev:backend\" \"bun run dev:frontend\"",
    "dev:backend": "cd backend && bun run dev",
    "dev:frontend": "cd frontend && bun run dev",
    "build": "bun run build:backend && bun run build:frontend",
    "build:backend": "cd backend && bun run build",
    "build:frontend": "cd frontend && bun run build",
    "start": "cd frontend && bun run start",
    "seed": "cd backend && bun run seed",
    "test": "cd backend && bun run test",
    "test:frontend": "cd frontend && bun run test",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "setup": "bun install && cd frontend && bun install && cd ../backend && bun install",
    "setup:seed": "bun run setup && bun run seed"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "frontend",
    "backend"
  ]
}
